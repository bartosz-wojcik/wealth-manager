<!-- Modal -->
<div class="modal fade" id="portfolio-modal" tabindex="-1" role="dialog" aria-labelledby="portfolio-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Update portfolio value</h4>
      </div>
      <%= form_for(@portfolio_change) do |f| %>
      <%= f.hidden_field :portfolio_id %>
      <%= f.hidden_field :partial_value %>
      <div class="modal-body">
        <p class="text-primary">
          Provide your current portfolio value in specific category.<br/>
          <em>Want to add a transaction instead?</em> Use <a href="#" class="open-other-modal" data-toggle="modal" data-target="#transaction-modal"><strong>this form</strong></a>.
        </p>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Current portfolio value</label>
              <h3 class="text-success text-center portfolio-value">245,000 â‚¬</h3>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Amount</label>
              <%= f.text_field :value, class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Currency</label>
              <%= f.collection_select :currency_id, Currency.all, :id, :full_name, { selected: current_account.currency_id }, { class: 'form-control' } %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Category</label>
              <%= f.grouped_collection_select :asset_category_id, AssetType.all, :asset_categories, :name, :id, :name, { prompt: true }, { class: 'form-control' } %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Date</label>
              <%= f.date_field :entered_date, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Notes</label>
              <%= f.text_area :notes, class: 'form-control', placeholder: 'More details' %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
      <% end %>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->