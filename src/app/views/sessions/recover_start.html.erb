<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel">
        <%= form_for(:account, :url => recover_start_post_url) do |f| %>
          <p class="text-center">
            <%= image_tag 'logo-small.png', :alt => 'NetValue', :class => 'logo-img' %>
          </p>
          <h3 class="text-center">Recover password</h3>

          <% flash.each do |key, value| %>
            <%= content_tag(:div, class: "alert alert-#{key}") do %>
              <p><%= raw value %></p>
            <% end %>
          <% end %>

          <p class="text-center text-muted">
            Provide the email address of your account to recover
          </p>

          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Your email' %>
          </div>

          <button type="submit" class="btn btn-lg btn-success btn-block">Start recovery</button>
        <% end %>
      </div>
    </div>
  </div>
</div>