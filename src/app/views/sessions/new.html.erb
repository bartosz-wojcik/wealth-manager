<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel">
        <p class="text-center">
          <%= image_tag 'logo-small.png', :alt => 'NetValue', :class => 'logo-img' %>
        </p>
        <p class="text-center text-muted">
          Create new NetValue account
        </p>

        <% flash.each do |key, value| %>
          <%= content_tag(:div, class: "alert alert-#{key}") do %>
            <p><%= raw value %></p>
          <% end %>
        <% end %>

        <%= form_for(:account, :url => signup_url) do |f| %>
          <fieldset>
            <div class="form-group">
              <label for="email">Your e-mail</label>
              <%= f.email_field :email, class: 'form-control', autofocus: true %>
            </div>
            <!-- Change this to a button or input when using this as a form -->
            <input type="submit" class="btn btn-lg btn-success btn-block" value="Sign Up" />
          </fieldset>
        <% end %>
        <h4 class="text-center">
          Already have an account?
          <%= link_to 'Sign in', login_url, class: 'sign-link' %>
        </h4>
      </div>
    </div>
  </div>
</div>