<div class="row">
  <div class="col-sm-4 col-sm-push-4">
    <div class="panel panel-default" id="account-details">
      <div class="panel-body">
        <div class="text-center">
          <%= image_tag(@account.gravatar_url, class: 'img-circle', alt: @account) %>
        </div>
        <div class="account-summary text-center">
          <a href="#" class="edit"><i class="fa fa-edit"></i></a>
          <% if @account.name.present? %>
          <h3><%= @account.name %></h3>
          <% end %>
          <p class="lead">
            <i class="fa fa-envelope"></i> <%= @account.email %>
          </p>
        </div>
        <%= form_for(@account, url: { action: 'details_post' }) do |f| %>
          <div class="form-group">
            <label for="account_name">Name</label>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="account_email">Email</label>
            <%= f.text_field :email, class: 'form-control' %>
          </div>

          <div class="text-right">
            <button class="btn btn-default form-cancel">Cancel</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h4 class="text-center notifications-link">
  <a href="#" class="text-size-large">Change general settings</a>
</h4>
<%= render 'settings' %>

<h4 class="text-center notifications-link">
  <a href="#" class="text-size-large">Change notifications settings</a>
</h4>
<%= render 'notifications' %>

<h4 class="text-center password-link">
  <a href="#" class="text-size-large"><%= @account.no_password? ? 'Set' : 'Change' %> password</a>
</h4>
<%= render 'password' %>
