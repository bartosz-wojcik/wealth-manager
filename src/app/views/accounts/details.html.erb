<div class="row">
  <div class="col-sm-4 col-sm-push-4">
    <div class="panel panel-default" id="account-details">
      <div class="panel-body">
        <div class="text-center">
          <%= image_tag(@account.gravatar_url, class: 'img-circle') %>
        </div>
        <%= form_for(@account, url: { action: 'details_post' }) do |f| %>
          <div class="form-group">
            <label>Name</label>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Email</label>
            <%= f.text_field :email, class: 'form-control' %>
          </div>

          <div class="text-right">
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        <% end %>
      </div>
    </div>

    <h4 class="text-center">
      <%= link_to('Change password', { action: 'password' }, class: 'text-size-large') %>
    </h4>
  </div>
</div>
