<div class="row">
  <div class="col-sm-4 col-sm-push-4">
    <div class="panel panel-info" id="change-password"<%= local_assigns.has_key?(:show) ? ' style="display:block"'.html_safe : '' %>>
      <div class="panel-heading">
        <h4 class="panel-title"><i class="fa fa-lock"></i> <%= @account.no_password? ? 'Set' : 'Change' %> Password</h4>
      </div>

      <div class="panel-body">
        <%= form_for(@account, url: { action: 'password_post'}) do |f| %>
          <div class="form-group">
            <label for="account_password">Your new password</label>
            <%= f.password_field :password, class: 'form-control', data: { :toggle => 'password' } %>
          </div>

          <div class="text-right">
            <button class="btn btn-default form-cancel">Cancel</button>
            <button type="submit" class="btn btn-primary"><%= @account.no_password? ? 'Set' : 'Change' %> password</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
